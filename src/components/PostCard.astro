---
import { Icon } from "astro-icon/components";

const { entry, className = "", style = "" } = Astro.props;
---
<div class={`transition flex flex-col rounded-[var(--radius-large)] bg-[var(--card-bg)] p-4 mb-4 border border-gray-300 dark:border-gray-600 ${className}`} style={style}>
    {entry.image && (
        <div class="mb-3 rounded overflow-hidden">
            <img src={entry.image} alt={entry.title} class="w-full object-cover rounded" />
        </div>
    )}

    <h3 class="text-lg font-bold mb-2">{entry.title}</h3>
    
    {entry.description && (
        <p class="text-sm text-gray-700 dark:text-gray-300 mb-2">{entry.description}</p>
    )}

    <div class="flex flex-wrap items-center gap-3 text-xs text-gray-500 dark:text-gray-400">
        <div class="flex items-center gap-1">
            <Icon name="material-symbols:calendar-today-outline-rounded" class="text-[0.9rem]" />
            <span>{new Date(entry.published).toLocaleDateString()}</span>
        </div>
        {entry.updated && entry.updated !== entry.published && (
            <div class="flex items-center gap-1">
                <Icon name="material-symbols:edit-calendar-outline-rounded" class="text-[0.9rem]" />
                <span>{new Date(entry.updated).toLocaleDateString()}</span>
            </div>
        )}
        {entry.words && (
            <div class="flex items-center gap-1">
                <Icon name="material-symbols:description-outline" class="text-[0.9rem]" />
                <span>{entry.words} 字</span>
            </div>
        )}
        {entry.minutes && (
            <div class="flex items-center gap-1">
                <Icon name="material-symbols:schedule-outline" class="text-[0.9rem]" />
                <span>{entry.minutes} 分鐘</span>
            </div>
        )}
    </div>
</div>
