---
import path from "node:path";

interface Props {
	id?: string;
	src: string;
	class?: string;
	alt?: string;
	position?: string;
	basePath?: string;
	lazy?: boolean; // 新增屬性
	placeholderSrc?: string; // 可選低解析圖
}

import { Image } from "astro:assets";
import { url } from "../../utils/url-utils";

const { id, src, alt, position = "center", basePath = "/", lazy = true, placeholderSrc } = Astro.props;
const className = Astro.props.class;

const isLocal = !(
	src.startsWith("/") ||
	src.startsWith("http") ||
	src.startsWith("https") ||
	src.startsWith("data:")
);
const isPublic = src.startsWith("/");

// 處理本地圖片
let img;
if (isLocal) {
	const files = import.meta.glob<ImageMetadata>("../../**", {
		import: "default",
	});
	let normalizedPath = path
		.normalize(path.join("../../", basePath, src))
		.replace(/\\/g, "/");
	const file = files[normalizedPath];
	if (!file) {
		console.error(
			`\n[ERROR] Image file not found: ${normalizedPath.replace("../../", "src/")}`,
		);
	}
	img = await file();
}

const imageClass = "w-full h-full object-cover transition-opacity duration-700 opacity-0";
const imageStyle = `object-position: ${position}`;
---

<div id={id} class:list={[className, 'overflow-hidden relative']}>
    <!-- 低解析占位圖 / 半透明層 -->
    {placeholderSrc && (
      <img
        src={placeholderSrc}
        alt=""
        class="absolute inset-0 w-full h-full object-cover blur-lg scale-110"
        aria-hidden="true"
      />
    )}
    <div class="transition absolute inset-0 dark:bg-black/10 bg-opacity-50 pointer-events-none"></div>

    <!-- 正式圖片 -->
    {isLocal && img && (
      <Image
  src={img}
  alt={alt || ""}
  loading="lazy"
  decoding="async"
  data-fade
  on:load={(e) => e.currentTarget.classList.add('is-loaded')}
/>
    )}
    {!isLocal && (
      <img
  src={isPublic ? url(src) : src}
  alt={alt || ""}
  loading="lazy"
  decoding="async"
  data-fade
  onload="this.classList.add('is-loaded')"
/>
    )}
</div>
