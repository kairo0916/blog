---
import Layout from "@/layouts/Layout.astro";
import MainGridLayout from "@/layouts/MainGridLayout.astro";
import { Icon } from "astro-icon/components";
import { siteConfig } from "@/config";
---

<Layout title="頁面未找到">
	<MainGridLayout>
		<!-- 整體容器：桌面左右、行動堆疊 -->
		<div class="min-h-[60vh] w-full flex items-center justify-center px-4 py-8">
			<div class="w-full max-w-4xl">
				<div class="grid grid-cols-1 md:grid-cols-[1fr_1.2fr] gap-8 items-center">
					<!-- 左側：大 404 與情緒圖示（置中） -->
					<div class="flex items-center justify-center">
						<div class="text-center">
							<div class="relative inline-block">
								<!-- 背景大字 404 -->
								<div class="select-none text-[6.5rem] md:text-[8rem] font-extrabold text-[var(--primary)] opacity-10 leading-none">
									404
								</div>
								<!-- 中央 icon -->
								<div class="absolute inset-0 flex items-center justify-center">
									<Icon
										name="fa6-solid:face-sad-tear"
										class="text-6xl md:text-8xl text-[var(--primary)]"
										aria-hidden="true"
									/>
								</div>
							</div>

							<!-- 簡短提示（桌面置於下方，行動也顯示） -->
							<p class="mt-6 text-sm text-[rgba(230,238,251,0.75)] max-w-[22rem] mx-auto">
								頁面不見了 — 但別擔心，我們送你一張回家的船票。
							</p>
						</div>
					</div>

					<!-- 右側：訊息卡片（主要操作） -->
					<div class="flex items-center">
						<div class="w-full card-base bg-[rgba(255,255,255,0.02)] border border-[rgba(255,255,255,0.04)] rounded-xl p-6 md:p-8 shadow-[0_8px_30px_rgba(2,6,23,0.45)]">
							<h1 class="text-2xl md:text-3xl font-semibold text-[var(--text)] mb-3">
								頁面走丟了
							</h1>
							<p class="text-[rgba(230,238,251,0.9)] mb-6 leading-relaxed">
								抱歉，你要訪問的頁面不存在或已被移動。
								<br />
								請確認網址是否正確，或返回首頁繼續瀏覽其他內容。
							</p>

							<!-- CTA：靠左（桌面）或置中（行動） -->
							<div class="flex md:justify-start justify-center">
								<a
									href="/"
									class="inline-flex items-center gap-3 px-6 py-3 rounded-lg font-medium text-white bg-gradient-to-r from-[#60A5FA] to-[#2563EB] hover:scale-[1.02] transition-transform shadow-lg focus:outline-none focus:ring-4 focus:ring-[rgba(96,165,250,0.12)]"
									aria-label="返回首頁"
								>
									<Icon name="fa6-solid:house" class="text-lg" />
									返回首頁
								</a>
								<!-- 可選的次要按鈕留空（已移除），保證排版不會跑位 -->
							</div>

							<!-- 次要提示（微小字） -->
							<p class="mt-4 text-sm text-[rgba(230,238,251,0.7)]">
								你也可以按瀏覽器的「上一頁」返回。
							</p>
						</div>
					</div>
				</div> <!-- grid end -->
			</div> <!-- max-w end -->
		</div> <!-- wrapper end -->
	</MainGridLayout>
</Layout>

<style is:inline>
/* 少量補強樣式，確保不同主題下變化穩定 */
:root{
  --primary: #60A5FA;
  --text: #e6eefb;
}

/* card-base 讓版面一致（若你的 global 有定義則會沿用） */
.card-base { box-sizing: border-box; }

/* 行動/桌機間距微調 */
@media (min-width: 768px) {
  /* 桌面時讓左側保持較大視覺重心 */
  .grid-cols-desktop-left { grid-template-columns: 1fr 1.2fr; }
}

/* 對 focus 做明顯指示，無障礙友好 */
a[aria-label], .card-base a {
  text-decoration: none;
}
a[aria-label]:focus {
  outline: none;
  box-shadow: 0 6px 18px rgba(37,99,235,0.12);
  transform: translateY(-2px);
}

/* 微調文字在窄屏的可讀性 */
@media (max-width: 420px) {
  .text-6xl { font-size: 3rem; }
}

/* 如果你的 site 已有 color variables，會自動套用；這裡只是保護 fallback */
</style>
